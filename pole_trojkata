#include <stdio.h>
#include <stdlib.h>

int main()
{
    float pole_trojkata(int a, int h)
    {
        return 0.5 * a * h;
    }
    int podstawa, wysokosc;
    printf("Podaj dlugosc podstawy\n");
    scanf("%d", &podstawa);
    printf("Podaj dlugosc wysokosci\n");
    scanf("%d", &wysokosc);

    printf("Pole trojkata to %f", pole_trojkata(podstawa, wysokosc));
    return 0;
}
